{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "outDir": "dist", //pasta para onde o código gerado é enviado(dist = distribuição)
        "typeRoots": [ //raiz dos tipos
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*.ts", //qualquer arquivo.ts dentro de qualquer diretório dentro de server
        "server/*.ts", //qualquer arquivo .ts dentro de server
        "tests/**/*.ts",
        "config/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "./node_modules"
    ],    
    "buildOnSave": true,
    "compileOnSave": true
}